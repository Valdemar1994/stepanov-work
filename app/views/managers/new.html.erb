<div class='form-upload'>
  <%= form_for Pool.new do |f| %>
    <div class="form-group">
      <%= f.text_field :type, placeholder: "Type pool type" %>
    </div>
    <div class="form-group">
      <%= f.text_field :profile_id, value: current_user.id, class:'d-none'%>
    </div>
    <div class="text-center">
      <%= f.submit 'Create Pool' %>
    </div>
  <% end %>
</div>
