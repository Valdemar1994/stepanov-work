<% if current_user.has_role? :manager %>

  <div class="h-10 px-5 m-2 flex justify">
    <%= button_to snapshots_path, method: :post,
    class:"text-gray-900 bg-gradient-to-r from-teal-200 to-lime-200 
    hover:bg-gradient-to-l hover:from-teal-200 hover:to-lime-200 focus:ring-4 
    focus:outline-none focus:ring-lime-200 dark:focus:ring-teal-700 font-medium 
    rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" do %>
      <p> Create Snapshot! </p>
    <% end %>
  </div>

  <div class="block p-6 rounded-lg shadow-lg bg-white w-1/3 m-auto mb-3">
    <%= form_for Pool.new do |f| %>

      <div class="justify-center mb-6 flex items-center gap-1">
        <%= f.radio_button :type, 'Manager' %>
        <%= f.label :type, 'Manager', value: 'Manager' %>
        <%= f.radio_button :type, 'TeamLead' %>
        <%= f.label :type, 'Team Leader', value: 'TeamLead' %>
        <%= f.radio_button :type, 'Mentor' %>
        <%= f.label :type, 'Mentor', value: 'Mentor' %>
        <%= f.radio_button :type, 'Employee' %>
        <%= f.label :type, 'Employee', value: 'Employee' %>
      </div>

      <div class="text-center mb-6">
        <%= f.label :name, "Parent" %>
        <%= f.select :parent_id, options_for_select(@select_parent) %>
        <%= f.label :name, "Children" %>
        <%= f.select :profile_id, options_for_select(@select_children)%>
      </div>

      <%= button_to "Create New Pool", new_pool_path, method: :get,
      class: 'w-full
          px-6
          py-2.5
          bg-blue-600
          text-white
          font-medium
          text-xs
          leading-tight
          uppercase
          rounded
          shadow-md
          hover:bg-blue-700 hover:shadow-lg
          focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0
          active:bg-blue-800 active:shadow-lg
          transition
          duration-150
          ease-in-out' %>
    <% end %>
  </div>

  <table class="shadow-lg bg-white border-separate text-center mx-auto">
    <tr>
      <th class="bg-blue-100 border text-center px-8 py-4">ID</th> 
      <th class="bg-blue-100 border text-center px-8 py-4">Parent id</th>
      <th class="bg-blue-100 border text-center px-8 py-4">Type</th>
      <th class="bg-blue-100 border text-center px-8 py-4">User Name</th>
      <th class="bg-blue-100 border text-center px-8 py-4">Grade</th>
      <th class="bg-blue-100 border text-center px-8 py-4">Speciality</th>
      <th class="bg-blue-100 border text-center px-8 py-4 ">Email</th>
      <th class="bg-blue-100 border text-center px-8 py-4">Delete</th>
    </tr>
    <% @pools.decorate.each do |pool| %>
      <tr>
        <td class="border px-8 py-4"><%= pool.id %></td>
        <td class="border px-8 py-4"><%= pool.parent_id %></td>
        <td class="border px-8 py-4"><%= pool.type %></td>
        <td class="border px-8 py-4"><%= pool.full_name %></td>
        <td class="border px-8 py-4"><%= pool.full_grade %></td>
        <td class="border px-8 py-4"><%= pool.profile.speciality.name %></td>
        <td class="border px-8 py-4"><%= pool.profile.user.email %></td>
        <td class="border px-8 py-4"> 
          <%= link_to pool_path(pool), class:"text-sm leading-5 text-gray-500 whitespace-no-wrap border-b border-gray-200",
          data: { turbo_method: :delete, turbo_confirm: 'Delete pool?' } do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-red-400 m-auto", fill="none"
            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25
            2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0l-3-3m3
            3l3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621
            0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
          <% end %>
        </td>
      </tr>      
    <% end %>
  </table>
  
  <div class="justify-center flex items-center mt-8">
    <% if @pools.present? %>
      <%= image_tag "graph6.png" %>
    <% else %>
      <%= 'CLEAR TREE' %>
    <% end %>
  </div>

  <div class="justify-center flex items-center mt-8">
    <%= render 'pools/history_tree' %>
  </div>

<% else %>
  <div class="justify-center flex items-center mt-8">
    <h1> The data on this page can only be seen by the manager </h1>
  </div>
<% end %>
